<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="120" ticks_per_second="10" />
  </framework>

  <!-- ****************** -->
  <!-- * Loop functions * -->
  <!-- ****************** -->
  <loop_functions 
     library="$ARGOSINSTALLDIR/build/user/vtrianni/simulator/experiments/flocking/libflocking.so" 
     label="flocking_lf" 
     num_robots = "10"
     min_init_distance = "0.25"
     init_radius = "1"
     max_robot_speed = "10"
     cohesion_range="0:2"
     gamma_weight="0.5">

  </loop_functions>


  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    
    <flocking_controller id="nn" library="$ARGOSINSTALLDIR/build/user/vtrianni/simulator/experiments/flocking/libflocking.so">
      <actuators>
        <footbot_wheels implementation="default" noise_std_dev="0.05" />
        <footbot_leds implementation="default" />
      </actuators>

      <sensors>
        <footbot_proximity implementation="rot_z_only"  noise_level="0.05" show_rays="true" />
        <footbot_omnidirectional_camera implementation="rot_z_only" 
                                      blob_noise_std_dev="0.05"
                                      check_occlusions="true"
                                      show_rays="false" />
      </sensors>

      <parameters parameter_file="__BESTIND"
                num_inputs="18"
                num_outputs="2"
                inputs_for_vector="6"
                speed_range="-10:10"
                camera_range="0:100"
                led_configuration="00B00000R000"/>

    </flocking_controller>
  </controllers>



  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <!-- Note: rotations are specified and performed in ZYX order (opposite of ARGoS1) -->
  <arena size="5, 5, 3">
    <floor id="floor" source="loop_functions" pixels_per_meter="100" />
  </arena>



  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <kinematics2d id="ground" iterations="10" />
  </physics_engines>

  <!-- ************************************ -->
  <!-- * Arena -> Physics Engines mapping * -->
  <!-- ************************************ -->
  <arena_physics>
    <engine id="ground" >
    </engine>
  </arena_physics>


  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qtopengl_render splash="false"> 
      <camera>
        <placement idx="0" position="0,0,4.5" look_at="0,0,0" />
        <placement idx="1" position="1,1,2" look_at="0,0,0" />
      </camera>
      <!-- user_functions library="$ARGOSINSTALLDIR/build/user/vtrianni/simulator/experiments/flocking/libflocking.so" label="flocking_qt" / -->
    </qtopengl_render>
  </visualization>

</argos-configuration>
